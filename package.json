{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Node.js boilerplate with settings for ESM, pnpm, TypeScript, esbuild, ESLint, Prettier, and more.",
  "type": "module",
  "keywords": [],
  "author": "Matthew Vance",
  "license": "MIT",
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "node ./scripts/build.js",
    "check": "concurrently \"pnpm:check:*\"",
    "check:format": "prettier --check \"src/**/*.ts\"",
    "check:lint": "eslint \"src/**/*.ts\" --ext .ts",
    "check:types": "tsc",
    "clean": "rimraf ./dist",
    "dev": "tsx watch --clear-screen=false ./src/main.ts",
    "fix": "concurrently \"pnpm:fix:*\"",
    "fix:format": "prettier --write \"src/**/*.ts\"",
    "fix:lint": "eslint \"src/**/*.ts\" --ext .ts --fix",
    "prestart": "pnpm build",
    "start": "node ./dist/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "got": "^14.0.0",
    "pino": "^8.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.3.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "msw": "^2.2.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "packageManager": "pnpm@8.15.3"
}
