{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Node.js boilerplate with settings for ESM, pnpm, TypeScript, ESLint, Prettier, and more.",
  "type": "module",
  "keywords": [],
  "author": "Matthew Vance",
  "license": "MIT",
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "node ./scripts/build.js",
    "check": "concurrently \"pnpm:check:*\"",
    "check:format": "prettier --check \"src/**/*.ts\"",
    "check:lint": "eslint \"src/**/*.ts\" --ext .ts",
    "check:types": "tsc",
    "clean": "rimraf ./dist",
    "dev": "tsx watch --clear-screen=false ./src/main.ts",
    "prestart": "pnpm build",
    "start": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "pino": "^8.17.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.3"
}
